<?xml version="1.0" encoding="utf-8"?><!--该布局是自定义的设置选项的布局,这里将checkBox设置为不可点击,其点击事件由整个布局截取-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/tv_select_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_select_title"
        android:layout_marginTop="3dp"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/select_selector" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/tv_select_desc"
        android:layout_marginTop="3dp"
        android:background="@color/gray" />


</RelativeLayout>