<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/top_title"
        android:text="@string/top_setting" />

    <com.zachaxy.safedefender.widget.SettingItemView
        android:id="@+id/set_autoupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:set_item_desc_off="自动更新已关闭"
        custom:set_item_desc_on="自动更新已开启"
        custom:set_item_title="@string/set_tv_dec_1" />

    <com.zachaxy.safedefender.widget.SettingItemView
        android:id="@+id/set_show_rocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:set_item_desc_off="桌面小火箭已关闭"
        custom:set_item_desc_on="桌面小火箭已开启"
        custom:set_item_title="桌面小火箭" />

    <com.zachaxy.safedefender.widget.SettingItemView
        android:id="@+id/set_show_phone_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:set_item_desc_off="来电归属地显示已关闭"
        custom:set_item_desc_on="来电归属地显示已开启"
        custom:set_item_title="来电归属地显示设置" />

    <com.zachaxy.safedefender.widget.SettingSelectItemView
        android:id="@+id/set_show_phone_addr_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:set_item_select_title="来电归属地风格设置" />

    <com.zachaxy.safedefender.widget.SettingSelectItemView
        android:id="@+id/set_show_phone_addr_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:set_item_select_title="来电归属地位置设置" />

    <com.zachaxy.safedefender.widget.SettingItemView
        android:id="@+id/set_interception_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:set_item_desc_off="电话短信拦截已关闭"
        custom:set_item_desc_on="电话短信拦截已开启"
        custom:set_item_title="电话短信拦截设置" />
</LinearLayout>
